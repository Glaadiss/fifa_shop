<!DOCTYPE html>
<html>
<head>
  <title>Fifa</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">FUTaccounts</a>
      </div>
      <ul class="nav navbar-nav">
        <li><a href="/accounts/new"> <%= t 'form' %></a></li>
        <% if user_signed_in? %>
          <li>
          <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
          </li>
        <% else %>
          <li>
          <%= link_to('Login', new_user_session_path)  %>
          </li>
        <% end %>
        <% if user_signed_in? %>
          <li>
          <%= link_to('Edit registration', edit_user_registration_path) %>
          </li>
        <% else %>
          <li>
          <%= link_to('Register', new_user_registration_path)  %>
          </li>
        <% end %>
        <li><%= link_to_unless_current 'english', locale: 'en' %></li>
        <li><%= link_to_unless_current 'polski', locale: 'pl' %></li>
      </ul>
    </div>
  </nav>

<% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> fade in">
    <button class="close" data-dismiss="alert">Ã—</button>
    <%= message %>
  </div>
<% end %>

  <div class="container" style="background: white; padding: 15px;">
    <%= yield %>
  </div>

  <footer> <hr></footer>
</body>
</html>
