

<hr>
<div style="background-color: black; color: black !important; padding: 5px;">
  <%= form_tag '/create_email', method: :post do %>
    <textarea name="emails" style="color: black !important;" class="form-control"> </textarea>
    <hr>
    <%= submit_tag 'Wyślij', class: 'btn btn-success' %>
  <% end %>
</div>
<hr>

<div class="container" style="background-color: black;">
  <div class="row">
    <div class="col-md-3"> <strong> Adres email</strong></div>
    <div class="col-md-3"> <strong> Hasło</strong></div>
    <div class="col-md-3"> <strong> Wykorzystany?</strong></div>
  </div>
  <hr>
  <% @emails.each do |email| %>
    <div class="row">
      <div class="col-md-3"> <%= email.name%></div>
      <div class="col-md-3"> <%= email.password %></div>
      <div class="col-md-3"> <%= email.complete? ? 'Tak' : 'Nie' %></div>
      <div class="col-md-3"><%= link_to 'Usuń', "/emails?id=#{email.id}", method: :delete, class:'btn btn-danger', data:{confirm:'Napewno?'}%></div>
    </div>
    <br>
  <% end %>
</div>
